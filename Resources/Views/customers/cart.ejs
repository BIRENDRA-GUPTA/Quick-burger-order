<section class="cart py-16">
<% if(session.cart) { %>
    <div class="order container mx-auto xl:w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/IMG/cart-black.png" alt="">
            <h1 class="font-bold ml-4 text-2xl">Order summary</summary></h1>
        </div>
        <div class="Burger-list">
         <% for(let burger of Object.values(session.cart.items)) { %>   
<div class="flex items-center my-8">
    <img class="w-24" src="/IMG/<%= burger.item.image %>" alt="">
    <div class="flex-1 ml-6">
        <h1><%= burger.item.name %></h1>
        <span><%= burger.item.size %></span>
    </div>
    <span class="flex-1"><%= burger.qty %> pcs</span>
    <span class="font-bold text-lg">₹<%= burger.item.price * burger.qty %></span>
</div>
<% } %>

        </div>
        <hr>
        <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold">Total Amount</span>
                <span class="amount text-2xl font-bold ml-2 bg-green-300">₹<%= session.cart.totalPrice %></span>
            </div>
            <% if(user) { %>
            <div>
                <form action="/orders" method="POST" class="mt-12">
                    <input name="phone" class="border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Phone number">
                    <input name="address" class="border border-gray-400 p-2 w-1/2" type="text" placeholder="Addres">
                        <div>
                  <button class="bg-green-300 px-6 py-2 rounded-full font-bold mt-6" type="submit">Order Now</button> 
                    </div>
                </form>
            </div>
<% } else { %>
           <a href="/login" 
            class="inline-block cursor-pointer bg-green-300 px-6 py-2 rounded-full font-bold mt-6" >Login to continue</a>
          <% } %>  
        </div>
    </div>
    <% } else { %>
<div class="empty-cart py-16">
    <div class="container mx-auto text-center">
<h1 class="text-6xl font-bold mb-2">Cart Empty</h1>
<p class="text-gray-500 text-lg mb-12">You probably haven't ordered a burger yet. <br>
To order a burger, go to the main page.</p>
<img class="w-2/5 mx-auto" src="/IMG/empty-cart.png" alt="empty-cart">
<a href="/" class="inline-block px-6 py-2 rounded-full bg-green-300 font-bold mt-12">Go back</a>
    </div>
</div>
<% } %>
</section>